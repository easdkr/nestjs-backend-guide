{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@api/(.*)$": "<rootDir>/../apps/api/src/$1",
    "^@libs/common/(.*)$": "<rootDir>/../libs/common/src/$1"
  }
}
